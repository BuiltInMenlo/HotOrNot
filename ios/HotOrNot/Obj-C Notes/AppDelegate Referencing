- (void)_changeTab:(NSNotification *)notification {
 	self.tabBarController.selectedIndex = [[notification object] intValue];
	
	// call a method by doing a selectr call
	[[[UIApplication sharedApplication] delegate] performSelector:@selector(changeTabToIndex:) withObject:@0];
	
	// call it directly
	[self changeTabToIndex:@0];
	
	// or by
	self.tabBarController.selectedIndex = 0;
}